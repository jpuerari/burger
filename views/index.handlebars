<div class="row">
  {{!-- create two columns --}}
  <div class="col-12 col-md-3">
    <h2>Create a Burger</h2>
    <form id="burger-form">
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Burger name" name="burger-name" />
      </div>
      <button class="btn btn-block btn-outline-success">Submit New Burger</button>
    </form>
  </div>

  <div class="col-12 col-md-9">
    <div class="card mb-4">
      <h3 class="card-header">
        Burgers Not Eaten
      </h3>
      <ul class="list-group-flush">
        {{!-- loop through burgers from handlebars and print out burgers that are NOT eaten --}}
        {{#each burgers}}
        {{#unless this.devoured}}
        <li class="list-group-item d-flex justify-content-between align-items-center align-center">
          <h4>{{this.burger_name}}</h4>
          <div>
            {{!-- eat a burger --}}
            <button class="btn btn-info devourBurger" data-burgerid="{{this.id}}">
              Time to eat!
            </button>
            {{!-- delete a burger --}}
            <button class="btn btn-danger deleteBurger" data-burgerid="{{this.id}}">
              Delete Me
            </button>
          </div>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="card mb-4">
      <h3 class="card-header">
        Burgers Devoured
      </h3>
      <ul class="list-group-flush">
        {{!-- loop through burgers from handlebars and print out burgers that are eaten --}}
        {{#each burgers}}
        {{#if this.devoured}}
        <li class="list-group-item d-flex justify-content-between align-items-center align-center">
          <h4>{{this.burger_name}}</h4>
          <div>
            {{!-- delete a burger --}}
            <button class="btn btn-danger deleteBurger" data-burgerid="{{this.id}}">
              Toss me away
            </button>
          </div>
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
